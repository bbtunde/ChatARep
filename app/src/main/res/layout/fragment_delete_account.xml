<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.overdrivedx.fragments.DeleteAccountFragment"
    android:background="@null"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:background="@null"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:gravity="right"
            android:padding="6sp"
            android:id="@+id/xclose"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5sp"
        android:paddingTop="10sp"
        android:paddingRight="5sp"
        android:paddingLeft="5sp"
        android:layout_below="@+id/xclose"
        android:background="@color/whiteTextColor"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Account"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:id="@+id/del_title"
        android:gravity="center"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="P"
            android:textSize="40sp"
            android:textColor="@color/red"
            android:id="@+id/del_desc"
            android:layout_below="@id/del_title"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="20sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Before you go, help us improve our service.\nPlease indicate why you choose to delete your account"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:id="@+id/del_help_improve"
            android:layout_below="@id/del_desc"
            android:layout_marginBottom="20sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/del_help_improve"
            android:layout_marginBottom="5sp"
            android:id="@+id/ll1"
            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I found it difficult to use."
                />
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/ll1"
            android:layout_marginBottom="10sp"
            android:id="@+id/ll2"
            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I don't find the service useful"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/ll2"
            android:layout_marginBottom="10sp"
            android:id="@+id/ll3"
            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ll3"
            android:layout_marginTop="20sp"
            android:gravity="center"
            >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/red_border_button"
            android:text="Delete"
            android:textColor="@drawable/red_text_color"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/delete_account"
            />
        </LinearLayout>

    </RelativeLayout>

    </RelativeLayout>
</FrameLayout>
